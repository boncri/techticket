<h1><%= tt('.title') %></h1>

<%= form_tag(customers_path, method: :get) do %>
    <%= search_field_tag :q, @q %>
<% end %>

<table>
  <thead>
    <tr>
      <th><%= tt('activerecord.attributes.customer.name') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= link_to tt('activerecord.attributes.customer.tickets'), customer_tickets_path(customer) %></td>
        <td><%= link_to tt('edit'), edit_customer_path(customer) %></td>
        <td><%= link_to tt('destroy'), customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to tt('.new'), new_customer_path %>
