<h1>Listing tickets</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Ticket date</th>
      <th>Quantity</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.description %></td>
        <td><%= ticket.ticket_date %></td>
        <td><%= ticket.quantity %></td>
        <td><%= ticket.customer_id %></td>
        <td><%= link_to 'Show', ticket %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<b>Saldo: <%= @customer.tickets_balance %></b>
<br>
<br>
<%= link_to 'New Ticket', new_customer_ticket_path(@customer) %>
